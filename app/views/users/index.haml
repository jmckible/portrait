= form_for @user do |f|
  - if @user.errors.any?
    = render partial: 'shared/errors', locals: { errors: @user.errors }
  = render f
  %p= f.submit 'Create User'

%table
  %tr
    %th Name
    %th Password
    %th Customer
    %th Sites
    %th Admin

  - @users.each do |user|
    %tr
      %td= link_to user.name, user
      %td= user.password
      %td= user.customer.name
      %td= number_with_delimiter user.sites.count
      %td= user.admin? ? 'Yes' : 'No'
